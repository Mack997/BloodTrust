<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayankagarwal.thechatapp.SearchFragment">

    <RelativeLayout
        android:id="@+id/search_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Spinner
            android:id="@+id/find_spinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/reg_email"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_bgr"
            android:entries="@array/blood_groups"
            android:padding="5dp" />

        <Button
            android:id="@+id/req_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="122dp"
            android:background="@drawable/already_accnt_btn"
            android:padding="15dp"
            android:text="@string/search"
            android:textColor="@color/white" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/req_search_btn"
            android:id="@+id/open_maps"
            android:text="Open Maps"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="180dp"
            android:padding="15dp"
            android:textColor="@color/white"
            android:background="@drawable/already_accnt_btn"/>

    </RelativeLayout>
</FrameLayout>
