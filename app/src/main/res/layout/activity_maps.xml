<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayankagarwal.thechatapp.MapsActivity">



    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">
        //android:layout_below="@+id/layout1"

        <Button
            android:id="@+id/hospitals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/already_accnt_btn"
            android:onClick="onClick"
            android:padding="15dp"
            android:text="Search Hospitals"
            android:textColor="@color/white" />

    </LinearLayout>


    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout2"
        tools:context="com.example.mayankagarwal.aligarhmapapp.MapsActivity" />

</RelativeLayout>